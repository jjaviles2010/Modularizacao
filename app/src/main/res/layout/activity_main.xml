<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Produtos" />

    <Button
        android:id="@+id/btDownloadNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Baixar o módulo de noticias" />

    <Button
        android:id="@+id/btOpenNewsModule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver notícias"
        android:visibility="gone" />

    <Button
        android:id="@+id/buttonDeleteNewsModule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apagar módulo de notícias"
        android:visibility="gone" />
</LinearLayout>

